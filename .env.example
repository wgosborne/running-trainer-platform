# ==============================================================================
# Running Training Tracker - Environment Configuration
# ==============================================================================
#
# Copy this file to .env and update values for your environment
# DO NOT commit .env with real credentials to version control
#
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
# Development:
DATABASE_URL=postgresql://tracker:tracker@localhost:5432/running_tracker_dev

# Production example:
# DATABASE_URL=postgresql://prod_user:secure_password@db.example.com:5432/running_tracker

# Database Connection Pool
MAX_POOL_SIZE=20          # Maximum number of connections in pool
POOL_RECYCLE=3600         # Recycle connections after N seconds (1 hour)

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG or INFO
# Production: INFO or WARNING
LOG_LEVEL=INFO

# Use JSON formatted logs (recommended for production)
# Development: false (human-readable colored output)
# Production: true (JSON for log aggregators)
USE_JSON_LOGS=true

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application Name (used in logs and documentation)
APP_NAME=Running Trainer API

# API Title (shown in OpenAPI docs)
API_TITLE=Running Training Tracker API

# API Version
API_VERSION=1.0.0

# API Description
API_DESCRIPTION=A production-ready microservice for managing running training plans

# Debug Mode
# IMPORTANT: Set to false in production!
# Enables: verbose logging, detailed error messages, SQL query logging
DEBUG=false

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# CORS Allowed Origins
# Development: Use * to allow all origins
# Production: Comma-separated list of allowed origins (no wildcards!)
# Examples:
#   ALLOWED_ORIGINS=*
#   ALLOWED_ORIGINS=https://app.example.com
#   ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
ALLOWED_ORIGINS=*

# ==============================================================================
# PERFORMANCE CONFIGURATION
# ==============================================================================

# Request Timeout (seconds)
# Maximum time to process a request before timing out
REQUEST_TIMEOUT=30

# Health Check Interval (seconds)
# How often to run background health checks
HEALTH_CHECK_INTERVAL=30

# ==============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ==============================================================================
#
# Before deploying to production, ensure:
# [ ] DEBUG=false
# [ ] LOG_LEVEL=INFO or WARNING (not DEBUG)
# [ ] USE_JSON_LOGS=true
# [ ] DATABASE_URL points to production database
# [ ] ALLOWED_ORIGINS set to specific domains (not *)
# [ ] MAX_POOL_SIZE appropriate for expected load
# [ ] All secrets properly secured (use secret management)
#
# ==============================================================================

# ==============================================================================
# OPTIONAL: FUTURE FEATURES
# ==============================================================================

# Strava Integration (Phase 2)
# STRAVA_CLIENT_ID=your_client_id
# STRAVA_CLIENT_SECRET=your_client_secret

# Redis Cache (Phase 2)
# REDIS_URL=redis://localhost:6379/0

# Prometheus Metrics (Phase 2)
# METRICS_ENABLED=true
# METRICS_PORT=9090

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
