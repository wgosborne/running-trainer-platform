# ==============================================================================
# Running Trainer Monorepo - Environment Configuration
# ==============================================================================
#
# Copy this file to .env and update values for your environment
# DO NOT commit .env with real credentials to version control
#
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://tracker:tracker@localhost:5432/running_tracker_dev

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application Name
APP_NAME=Running Trainer API

# API Version
API_VERSION=v1

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Debug Mode (Set to False in production)
DEBUG=False

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# JWT Secret (Change in production!)
JWT_SECRET=your-secret-key-change-in-production

# ==============================================================================
# EXTERNAL SERVICES (Optional - Future Features)
# ==============================================================================

# Strava Integration
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=

# ==============================================================================
# SERVICE PORTS
# ==============================================================================

# Running Trainer Service: 8001
# Auth Service: 8004 (Coming soon)
# PDF Service: 8002 (Coming soon)
# Strava Service: 8003 (Coming soon)
# API Gateway: 8000 (Coming soon)

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
